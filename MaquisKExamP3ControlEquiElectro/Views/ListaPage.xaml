<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaquisKExamP3ControlEquiElectro.Views.ListaPage"
             Title="Lista de Dispositivos">
    <CollectionView ItemsSource="{Binding Equipos}" SelectionMode="None">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BorderColor="Gray" Margin="10" Padding="10">
                    <StackLayout>
                        <Label Text="{Binding Dispositivo}" FontAttributes="Bold" />
                        <Label Text="{Binding Marca}" />
                        <Label Text="{Binding GarantiaActiva, StringFormat='Garantía: {0}'}" />
                        <Label Text="{Binding VidaUtilMeses, StringFormat='Vida útil: {0} meses'}" />
                        <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand" Spacing="15" Margin="0,10,0,0">
                            <Button Text="Editar" Clicked="Editar_Clicked" />
                            <Button Text="Eliminar" Clicked="Eliminar_Clicked" BackgroundColor="#D32F2F" TextColor="White"/>
                        </StackLayout>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>