<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaquisKExamP3ControlEquiElectro.Views.RegistroPage"
             Title="Registrar Equipo">
    <StackLayout Padding="20" Spacing="15">
        <Entry Placeholder="Dispositivo" Text="{Binding Dispositivo}" />
        <Entry Placeholder="Marca" Text="{Binding Marca}" />
        <StackLayout Orientation="Horizontal" VerticalOptions="Center">
            <Label Text="Garantía Activa" VerticalOptions="Center" />
            <Switch IsToggled="{Binding GarantiaActiva}" HorizontalOptions="EndAndExpand"/>
        </StackLayout>
        <Label Text="Vida útil (meses)" />
        <Entry Keyboard="Numeric" Text="{Binding VidaUtilMeses}" />
        <Button Text="Guardar" Command="{Binding GuardarCommand}" />
        <Button Text="Limpiar" Clicked="OnLimpiarClicked" />
    </StackLayout>
</ContentPage>